<Window x:Class="RobotController.WpfGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotController.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="477" Margin="1,94,0,-0.6" VerticalAlignment="Top" Width="992">
            <TabControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.477"/>
                    <RotateTransform/>
                    <TranslateTransform X="3.192"/>
                </TransformGroup>
            </TabControl.RenderTransform>
            <TabItem Header="Main">
                <Grid Background="#FFE5E5E5" Margin="0,0,9.8,2.4"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5" Margin="0,0,-0.2,0" Height="442" VerticalAlignment="Top"/>
            </TabItem>
        </TabControl>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="67.6" Margin="10,10,0,0" VerticalAlignment="Top" Width="269.6">
            <StackPanel Margin="168.2,-1,-1,-1" >
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,10,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="BtnConnect" Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27" Margin="10,0,0,0" Width="80.2" Click="BtnConnect_Click"/>
                <Button x:Name="BtnDisconnect" Content="Disconnect" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="27" Margin="10,0,0,0" Width="80.2" Click="BtnDisconnect_Click"/>
            </StackPanel>
        </Border>
        <ComboBox x:Name="PortsCombobox" HorizontalAlignment="Left" Margin="20,43,0,0" VerticalAlignment="Top" Width="120" DropDownOpened="ComboboxPortsOnDropdownOpened"/>
        <Label Content="Select port" HorizontalAlignment="Left" Margin="20,12,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
