<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:RobotController.WpfGui.Controls"
    xmlns:extendedControls="clr-namespace:RobotController.WpfGui.ExtendedControls"
    x:Class="RobotController.WpfGui.MainWindow"
        mc:Ignorable="d"
    ResizeMode="NoResize"
        Title="Robot Controller" Height="680" Width="1050" Closing="WindowClose">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="120">
            </RowDefinition>
            <RowDefinition Height="*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl HorizontalAlignment="Stretch" Margin="5" Grid.Row="1" VerticalAlignment="Stretch" Grid.ColumnSpan="2" >
            <TabItem Header="Status">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <controls:Status Grid.Row="0" Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Control settings">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="176" />
                        <ColumnDefinition Width="852"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <controls:ControlSettings Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" ExpoSliderChanged="ExpoSliderChanged" LowPassFilterSliderChanged="FilterSliderChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Robot settings">
                <Grid Background="#FFE5E5E5">
                    <controls:RobotSettings Grid.Row="0" Grid.Column="0" TextBoxEnterPressed="RobotSettings_TextBoxEnterPressed" />
                </Grid>
            </TabItem>
            <TabItem Header="Logs">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="347*"/>
                        <ColumnDefinition Width="681*"/>
                    </Grid.ColumnDefinitions>
                    <controls:Debug Grid.ColumnSpan="2" />
                </Grid>
            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch">
                <Canvas>
                    <Image Height="65" Width="65" Canvas.Left="5.4" Canvas.Top="37.22" Source="Assets/Icons/plug.png" />
                    <Rectangle Fill="#FF3D3D46" Height="28" Stroke="Black" StrokeDashArray="0 0" Width="288"/>
                    <TextBlock HorizontalAlignment="Left" Height="14.4" TextWrapping="Wrap" Text="Connection" VerticalAlignment="Top" Width="84.8" Canvas.Left="10" Canvas.Top="5" Foreground="White" Margin="0"/>
                    <TextBlock HorizontalAlignment="Left" Height="14.4" Text="Select port:" VerticalAlignment="Top" Width="84.8" Canvas.Left="80.8" Canvas.Top="50.6"/>
                    <ComboBox Name="PortComboBox" Width="84.8" Height="22" Canvas.Left="80.8" Canvas.Top="76" DropDownOpened="OnSerialPortDropDownOpened"/>
                    <Button Content="Connect" Canvas.Left="193" Canvas.Top="38" Width="80" Height="25" Click="ConnectButtonClick"/>
                    <Button Content="Disconnect" Canvas.Left="193" Canvas.Top="73" Width="80" Height="25" Click="DisconnectButtonClick"/>
                </Canvas>
            </Border>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch">
                <Canvas>
                    <Image Height="56.467" Width="56.467" Canvas.Left="10" Canvas.Top="41.533" Source="Assets/Icons/memory.png" />
                    <Rectangle Fill="#FF3D3D46" Height="28" Stroke="Black" StrokeDashArray="0 0" Width="198"/>
                    <TextBlock HorizontalAlignment="Left" Height="14.4" TextWrapping="Wrap" Text="Robot EEPROM" VerticalAlignment="Top" Width="84.8" Canvas.Left="10" Canvas.Top="5" Foreground="White" Margin="0"/>
                    <extendedControls:ExtendedButton Click="OnButtonClick" ECommand="EepromRead" ENode="Master" EPriority="High" Content="Read" Canvas.Left="99.2" Canvas.Top="37.22" Width="80" Height="25"/>
                    <extendedControls:ExtendedButton Click="OnButtonClick" ECommand="EepromWrite" ENode="Master" EPriority="VeryHigh" Content="Write" Canvas.Left="99.2" Canvas.Top="73" Width="80" Height="25"/>
                </Canvas>
            </Border>
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch">
                <Canvas>
                    <Image Height="65" Width="72.467" Canvas.Left="10" Canvas.Top="37.22" Source="Assets/Icons/gamepad.png" />
                    <Rectangle Fill="#FF3D3D46" Height="28" Stroke="Black" StrokeDashArray="0 0" Width="198"/>
                    <TextBlock HorizontalAlignment="Left" Height="14.4" Text="Allow movement" VerticalAlignment="Top" Width="97.6" Canvas.Left="10" Canvas.Top="5" Foreground="White" Margin="0"/>
                    <extendedControls:ExtendedButton Click="OnButtonClick" ECommand="AllowMovement" ENode="Master" EPriority="Normal" Content="Start" Canvas.Left="99.2" Canvas.Top="37.22" Width="80" Height="25"/>
                    <extendedControls:ExtendedButton Click="OnButtonClick" ECommand="StopMovement" ENode="Master" EPriority="VeryHigh" Content="Stop" Canvas.Left="99.2" Canvas.Top="73" Width="80" Height="25"/>
                </Canvas>
            </Border>
        </Grid>
    </Grid>
</Window>
